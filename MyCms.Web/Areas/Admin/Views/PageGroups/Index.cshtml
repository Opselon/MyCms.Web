@model IEnumerable<MyCms.DomainClasses.PageGroup.PageGroup>

@{
    ViewData["Title"] = "لیست گروه خبر ها";
}

<h2>لیست گروه خبر ها</h2>

<p>
    <a asp-action="Create" class="btn btn-primary" >افزودن گروه جدید</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GroupTitle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupTitle)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-id="@item.GroupID">ویرایش</a> |
                <a asp-action="Details" class="btn btn-sm btn-info" asp-route-id="@item.GroupID">جزیات</a> |
                <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.GroupID">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
