@model IEnumerable<MyCms.DomainClasses.Page.Page>
@using MyCms.Utilities.Convertor
@{
    ViewData["Title"] = "Index";
}



<p>
    <a asp-action="Create" class="btn btn-primary">افزودن خبر جدید</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PageTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PageGroup)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.PageVisit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src='~/PageImages/@item.ImageName' class="thumbnail" style="max-width:100px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PageTitle)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.PageGroup.GroupTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PageVisit)
            </td>


            <td>
               @item.CreateDate.ToShamsi()
            </td>

            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.PageID">ویرایش</a> |
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.PageID">جزیات</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.PageID">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
